<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.AnaMuslim" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/mainColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/mainColor</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->


    </style>

    <style name="toolbar_style">

        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/white</item>

    </style>

    <style name="Theme.AnaMuslim.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="bottomSheetStyle" parent="Theme.Design.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/bottomSheetStyleTheme</item>
    </style>

    <style name="bottomSheetStyleTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@android:color/transparent</item>
    </style>

</resources>